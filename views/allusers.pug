extends layout 

block content  
    div(class="d-flex flex-column" style="overflow: auto; border-top: 1px solid white; color: white; border-bottom: 1px solid white; color: white; width: 70%; height: 100%; align-items: center;")
        h2 Leaderboard
        for player in users
            div(class="d-flex flex-row" style="justify-content: center; align-items: center; width: 100%; border-top: 1px solid white;")
                p(style="margin-left: 10px; text-align: left;")
                    a(href=`/users/${player._id}` style="color: inherit; text-decoration: none;")= player.username 
                div(style="flex: 1;")
                p(style="margin-right: 10px;")= "Rank: " + player.rank
        div(style="width: 100%; border: 0.25px solid white;")
            