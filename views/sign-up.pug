extends layout 

block content 
     link(rel="stylesheet", href="/stylesheets/forms.css")
     div(class="rounded cont" style="margin: auto auto; background-color: green; padding: 10px; color: white; width: 40rem;")
        form(action="/sign-up" method='POST')
            div(class="mb-3")
                label(for="username" class="form-label") Username
                input(name="username" type="text" minlength ="3" maxlength="30" class="form-control" id="username" aria-describedby="username" required)
                if message !== ""
                    p(style="color: red;")= message
            div(class="mb-3")
                label(for="password" class="form-label") Password 
                input(name="password" type="password" minlength="8" maxlength="30" class="form-control" id ="username" aria-describedby="password" required)
            button(style="background-color: rgba(0, 0, 0, 0.705); border: none;" type="submit" class="btn btn-primary") Submit
            hr
            a(style="color: inherit;" href="/log-in") Already have an account? Log in here!