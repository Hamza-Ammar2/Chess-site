extends layout 

block content
     div(class="rounded" style="margin: auto auto; background-color: green; padding: 10px; color: white; width: 40rem;")
        form(action="/log-in" method='POST')
            div(class="mb-3")
                label(for="username" class="form-label") Username
                input(name="username" type="text" minlength="3" maxlength="30" class="form-control" id="username" aria-describedby="username" required)
                if message === "Incorrect username"
                    p(style="color: red;")= message

            div(class="mb-3")
                label(for="password" class="form-label") Password 
                input(name="password" type="password" minlength="2" maxlength="30" class="form-control" id ="username" aria-describedby="password" required)
                if message === "Incorrect password"
                    p(style="text-color: red;")= message

            button(style="background-color: rgba(0, 0, 0, 0.705); border: none;" type="submit" class="btn btn-primary") Submit
        hr
        a(style="color: inherit;" href="/sign-up") Don't have an account? Sign up here!
